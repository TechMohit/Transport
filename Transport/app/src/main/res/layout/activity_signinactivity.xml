<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Signinactivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/rect1"
        android:text="Login"
        android:gravity="center"
        android:textSize="@dimen/sp15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRANSPORT DEPARTMENT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/car_img"
                android:layout_width="80dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/goblogo"
                android:textColor="#efefef" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_uName_lay"
                style="@style/textinputlaout_wmatch_hwrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_img"
                android:layout_margin="5dp"
                android:alpha="0.5">

                <EditText
                    android:id="@+id/et_uName"
                    style="@style/edittext_normal"
                    android:hint="@string/user_name" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_pswd_lay"
                style="@style/textinputlaout_wmatch_hwrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_uName_lay"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:alpha="0.5">

                <EditText
                    android:id="@+id/et_pswd"
                    android:inputType="textPassword"
                    style="@style/edittext_normal"
                    android:hint="@string/password" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pswd_lay"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="@string/forgotpswd"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/rect"
                android:gravity="center"
                android:padding="10dp"
                android:text="Sign In"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Don't have account?"
                android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/Create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>