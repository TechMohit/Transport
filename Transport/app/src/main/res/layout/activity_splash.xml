<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#75ffffff">
    </FrameLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/txt_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/goblogo"
        android:transitionName="logo" />

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:padding="5dp"
        android:text="Bihar Transport"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/sp25"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray">

        </View>

        <TextView
            android:id="@+id/powerby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imglogo"
            android:gravity="center"
            android:padding="5dp"
            android:text="2017Â© Copyright Bihar Transport. All Rights Reserved"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/powerby1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/powerby"
            android:paddingRight="5dp"
            android:text="Empowered by:"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/powerby1"
            android:paddingBottom="5dp"
            android:src="@drawable/logoby" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_inernet"
        android:layout_height="match_parent"
        android:background="@color/transparent">

